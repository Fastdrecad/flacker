{
  "name": "modern-typescript-server",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:debug": "tsx --inspect src/server.ts",
    "start": "tsx src/server.ts",
    "build": "tsc",
    "prod": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "lru-cache": "^11.0.2",
    "morgan": "^1.10.0",
    "rimraf": "^6.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.19.0",
    "@eslint/js": "^9.15.0",
    "@eslint/object-schema": "^2.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  }
}
